  "dependencies": {
    "@apollo/react-components": "^4.0.0-beta.2",
    "@chakra-ui/react": "^1.6.2",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "apollo-boost": "^0.4.9",
    "framer-motion": "^4.1.17",
    "if-env": "^1.0.4",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "concurrently": "^5.2.0"
  }
}
